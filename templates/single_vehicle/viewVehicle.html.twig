{% extends 'base.html.twig' %}


{% block title %}{% for vehicle in singleVehicle %} {{ vehicle.name }} - VoitureVintage {% endfor %}{% endblock %}


{% block body %}


{% for vehicle in singleVehicle %}

<div class="container">
    <div class="navbar-expand-md mt-2">
        <div class="collapse navbar-collapse" id="navcol-1">
            <h4 class="me-auto">{{vehicle.name}}</h4>
            <h4>{{vehicle.price}} €</h4>
        </div>
    <hr>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div>
                <div class="card-content">
                    <div class="card-body">
                        <img class="img-custom" src="{{asset ('uploads/' ~ vehicle.picture)}}">
                    </div>
                </div>

            </div>

        </div>
        <div class="col-md-4">
            <h1 class="text-center">{{vehicle.name}}</h1>

            <br>
            <p>{{vehicle.description}}</p>
            <br>
            <p>Couleur: {{vehicle.color}}</p>
            </br>
            <p>Capacité: {{vehicle.capacity}} Go</p>

        </div>
  

    {% endfor %}


    {% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Home!{% endblock %}

{% block body %}
        <!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                   
                   
                   {% for vehicle in vehicles %}
                    <div class="col mb-5">
                        <div class="card h-80">
                            <!-- vehicle image-->
                            <img class="img-custom" src="{{asset ('uploads/' ~ vehicle.picture)}}">


                            <!-- vehicle details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- vehicle name-->
                                    <h5 class="fw-bolder">{{vehicle.name}}</h5>
                                    <!-- vehicle price-->
                                     
                            {{vehicle.price}}â‚¬
                                </div>
                            </div>
                            <!--vehicle  actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="{{ path( 'single_vehicle', {'id' : vehicle.id} ) }}">View vehicle</a></div>
                            </div>
                        </div>
                    </div>
                   
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </section>


{% endblock %}

